{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2019",
    "lib": ["dom", "ES2021"],
    "experimentalDecorators": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,

    "strictNullChecks": true,

    "skipLibCheck": true,
    "sourceMap": true,
  },
  "include": ["**/*.ts"]
}
